{
  "tests": [
    {
      "name": "OPTIONS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "GET inventory",
      "method": "GET",
      "path": "/?action=inventory",
      "expectedStatus": 200
    },
    {
      "name": "GET bonuses for client",
      "method": "GET",
      "path": "/?action=bonuses&registration_id=12",
      "expectedStatus": 200
    },
    {
      "name": "GET bonuses missing id",
      "method": "GET",
      "path": "/?action=bonuses",
      "expectedStatus": 400
    },
    {
      "name": "PUT update inventory",
      "method": "PUT",
      "path": "/",
      "body": {
        "items": [
          {"breed": "Граб", "stars": 1, "category": "Обычный", "stock": 10},
          {"breed": "Платан", "stars": 1, "category": "Обычный", "stock": 5}
        ]
      },
      "expectedStatus": 200
    },
    {
      "name": "PUT empty items fails",
      "method": "PUT",
      "path": "/",
      "body": {},
      "expectedStatus": 400
    },
    {
      "name": "POST give magnet unknown client returns 404",
      "method": "POST",
      "path": "/",
      "body": {
        "registration_id": 999999,
        "breed": "Граб",
        "stars": 1,
        "category": "Обычный"
      },
      "expectedStatus": 404
    },
    {
      "name": "GET client magnets",
      "method": "GET",
      "path": "/?registration_id=12",
      "expectedStatus": 200
    },
    {
      "name": "POST missing fields",
      "method": "POST",
      "path": "/",
      "body": {
        "registration_id": 5
      },
      "expectedStatus": 400
    },
    {
      "name": "GET without id",
      "method": "GET",
      "path": "/",
      "expectedStatus": 400
    },
    {
      "name": "DELETE magnet invalid id",
      "method": "DELETE",
      "path": "/?magnet_id=abc",
      "expectedStatus": 400
    },
    {
      "name": "DELETE magnet not found",
      "method": "DELETE",
      "path": "/?magnet_id=999999",
      "expectedStatus": 404
    }
  ]
}